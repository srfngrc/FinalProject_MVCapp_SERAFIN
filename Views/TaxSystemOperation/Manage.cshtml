@model IEnumerable<FinalProject_MVCapp_SERAFIN.Models.TaxSystemOperationMODEL>

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Operations Management</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.operationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purchaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sellDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

    @foreach (var operationA in Model)
    {
        <tr>
            <td>@operationA.operationId</td>
            @*<td>
                @Html.DisplayFor(modelItem => item.operationId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => operationA.isin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => operationA.purchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => operationA.sellDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => operationA.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => operationA.description)
            </td>
            <td>
                @Html.ActionLink("Edit Operation", "Edit", new { id = operationA.operationId }) |
                @Html.ActionLink("Delete Operation", "Delete", new { id = operationA.operationId })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

